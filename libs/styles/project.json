{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "@omnifex/styles",
  "projectType": "library",
  "sourceRoot": "libs/styles/src",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/styles",
        "main": "libs/styles/src/public-api.ts",
        "tsConfig": "libs/styles/tsconfig.lib.prod.json",
        "assets": [
          {
            "input": "libs/styles/src",
            "glob": "**/*.css",
            "output": "."
          }
        ]
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/styles/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "libs/styles/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["libs/styles/**/*.ts"],
        "maxWarnings": 0
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/libs/styles"],
      "options": {
        "jestConfig": "libs/styles/jest.config.cjs",
        "passWithNoTests": true
      }
    }
  },
  "tags": ["type:styles"]
}
