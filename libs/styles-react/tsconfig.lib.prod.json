{
  "extends": "../../tsconfig.ng-packagr.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "target": "ES2022",
    "module": "ES2022",
    "jsx": "react-jsx",
    
    // IMPORTANT: ensure emitted JS never contains TS-only syntax like `export type`
    "verbatimModuleSyntax": false,
    "importsNotUsedAsValues": "remove",
    "preserveValueImports": false,
    
    // keep prod outputs lean
    "declaration": true,
    "emitDeclarationOnly": false,
    "declarationMap": false,
    "sourceMap": false,
    "inlineSources": false,
    
    // ESM-friendly resolution for modern packages
    "moduleResolution": "Bundler",
    
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ]
}



