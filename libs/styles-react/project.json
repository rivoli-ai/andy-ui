{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "@omnifex/styles-react",
  "projectType": "library",
  "sourceRoot": "libs/styles-react/src",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/dist/styles-react"],
      "options": {
        "commands": [
          "nx run @omnifex/styles-react:build-tsc",
          "node tools/scripts/copy-file.mjs libs/styles-react/src/theme.css dist/styles-react/src"
        ],
        "parallel": false
      },
      "configurations": {
        "production": {},
        "development": {}
      },
      "defaultConfiguration": "production"
    },
    "build-tsc": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "dependsOn": ["@omnifex/styles:build"],
      "options": {
        "outputPath": "dist/styles-react",
        "main": "libs/styles-react/src/public-api.ts",
        "tsConfig": "libs/styles-react/tsconfig.lib.prod.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/styles-react/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "libs/styles-react/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["libs/styles-react/**/*.{ts,tsx}"],
        "maxWarnings": 0
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/libs/styles-react"],
      "options": {
        "jestConfig": "libs/styles-react/jest.config.cjs",
        "passWithNoTests": true
      }
    }
  },
  "tags": ["type:styles", "framework:react"],
  "implicitDependencies": ["@omnifex/styles"]
}
